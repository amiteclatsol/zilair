<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:background="@drawable/light_rounded_square"
    android:orientation="vertical"
    android:weightSum="102" >

   
    <RelativeLayout
        android:id="@+id/relative_source"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:background="@drawable/light_rounded_square"
        android:orientation="vertical"
       >

        <TextView
            android:id="@+id/textview_source1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:singleLine="true"
            android:text="" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/bookflight_bg" >
    </LinearLayout>

 

    <RelativeLayout
        android:id="@+id/relative_source_return"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:background="@drawable/light_rounded_square"
        android:orientation="vertical"        >

        <TextView
            android:id="@+id/textview_return_source1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:singleLine="true"
            android:text="" />
    </RelativeLayout>

</LinearLayout>